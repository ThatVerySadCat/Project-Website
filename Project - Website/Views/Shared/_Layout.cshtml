<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("/Content/css")
    @Styles.Render("/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">
        <!-- Title Row -->
        <div class="row">
            <div class="flex-grow-1"></div>
            <div class="col-sm-1">
                <a class="title" href="/Home/Index">Thingy</a>
            </div>
            <div class="flex-grow-1"></div>
        </div>

        <div class="spacing-small"></div>

        <!-- Navbar Row -->
        <div class="row">
            <div class="col-sm-12">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav col-sm-12">
                            <li class="nav-item col-sm-3">
                                <a class="nav-link nav-index text-sm-center" href="~/Home/Index">Home</a>
                            </li>
                            <li class="nav-item col-sm-3">
                                <a class="nav-link nav-leaderboards text-sm-center" href="~/Leaderboards/Leaderboards">Leaderboards</a>
                            </li>
                            <li class="nav-item col-sm-3">
                                <a class="nav-link nav-bestiary text-sm-center" href="~/Bestiary/Bestiary">Bestiary</a>
                            </li>
                            <!-- TODO: Make it so that when the user is logged in it displays Account and Logout options instead of the Login option -->
                            <li class="nav-item col-sm-3">
                                <a class="nav-link nav-login text-sm-center" href="~/Account/Login">Login</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>

        <div class="spacing"></div>

        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/poppermin")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/site.js")
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</body>
</html>
