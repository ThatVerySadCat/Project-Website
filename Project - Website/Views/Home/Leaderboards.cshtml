@{
    ViewBag.Title = "Leaderboards";
}

@section Styles{
    @Styles.Render("/Content/Leaderboards.css")
    }

<!-- Leaderboard Buttons -->
<div class="row">
    <div class="flex-grow-1"></div>
    <div class="col-sm-4">
        <button class="btn btn-primary" type="button" disabled>Global Leaderboard</button>
        <button class="btn btn-primary" type="button">Personal Leaderboard</button>
    </div>
    <div class="flex-grow-1"></div>
</div>

<div class="spacing"></div>

<!-- Search Bar -->
<div class="form-row">
    <div class="flex-grow-1"></div>
    <div class="input-group col-sm-8">
        <input type="text" class="form-control" placeholder="Username..." />
    </div>
